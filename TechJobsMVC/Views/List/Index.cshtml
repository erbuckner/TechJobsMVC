<div class="container body-content">
    <h1>@ViewBag.title</h1>
    <h2 class="centered">View Jobs By Category</h2>
</div>

<table class="centeredTable">
    <tr>
        @foreach (var column in ViewBag.columns)
        {
            <th>@column.Value</th>
        }
    </tr>
    <tr>
        @{
            //#2: Complete the View Jobs By Category Table
            //first <td></td> block sets up link for All column
            //foreach populates rest of columns
        }

       
        <td>
            <ul>

                <li>
                    <a asp-controller="List" asp-action="Jobs" asp-route-column="All" asp-route-value=*>All</a>
                </li>

            </ul>
        </td>

       
        @foreach (var category in ViewBag.tableChoices)
        {
            <td>
                <ul>
                    @foreach (var item in category.Value)
                    {
                        <li>
                            <a asp-controller="List" asp-action="Jobs" asp-route-column="@category.Key" asp-route-value="@item">@item</a>
                        </li>
                    }
                </ul>
            </td>
        }
    </tr>
        </table>
